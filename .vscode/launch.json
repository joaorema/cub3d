{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "cub3d",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/jpedro-c/sgoinfre/cub3d/cub3d",
			"args": ["maps/valid/maze.cub"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
					"description": "Set gdb to follow child process after fork",
                    "text": "set follow-fork-mode child",
                    "ignoreFailures": true,
                },
            ],
            "logging": {
                "engineLogging": true
            }
        }
    ]
}